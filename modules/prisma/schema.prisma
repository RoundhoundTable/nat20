// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  username String

  characters      Character[]
}

model Character {
  id               String @id @default(uuid())
  level            Int
  class            String
  userId           String
  name             String
  description      String
  picture        String
  classArmor       Int
  hitPoints        Int
  initiative       Int
  proficiencyBonus Int
  speed            Int
  stats            Json

  user      User                @relation(fields: [userId], references: [id])
}